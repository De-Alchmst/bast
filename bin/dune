; dune - Build configuration file
; This tells dune how to build our compiler

; The main executable
(executable
 (public_name bast)
 (name main)
 (modules ast lexer parser codegen main)
 (libraries bast menhirLib))

; Tell dune to use ocamllex to generate lexer.ml from lexer.mll
(ocamllex lexer)

; Tell dune to use menhir to generate parser.ml and parser.mli from parser.mly
(menhir
 (modules parser))
